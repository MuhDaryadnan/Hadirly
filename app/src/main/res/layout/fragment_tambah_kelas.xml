<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.kelas.TambahKelasFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nama"
            android:fontFamily="@font/geobold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Matakuliah" />

        <EditText
            android:id="@+id/matkul"
            android:layout_marginVertical="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:ems="10"
            android:background="@drawable/round_field"
            android:inputType="text"
/>

        <TextView
            android:id="@+id/textView12"
            android:fontFamily="@font/geobold"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosen" />

        <EditText
            android:id="@+id/dosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:background="@drawable/round_field"
            android:ems="10"
            android:layout_marginVertical="4dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/proddwai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/geobold"
            android:text="Prodi" />

        <EditText
            android:id="@+id/prodi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:background="@drawable/round_field"
            android:ems="10"
            android:inputType="text"
            android:paddingStart="4dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/geobold"
            android:text="Kelas" />

        <EditText
            android:id="@+id/kelas2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:background="@drawable/round_field"
            android:ems="10"
            android:inputType="text"
            android:paddingStart="4dp" />

        <TextView
            android:id="@+id/textView16"
            android:fontFamily="@font/geobold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="semester" />

        <EditText
            android:id="@+id/semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginVertical="4dp"
            android:paddingStart="4dp"
            android:background="@drawable/round_field"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView17"
            android:fontFamily="@font/geobold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tahun" />

        <EditText
            android:id="@+id/tahun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginVertical="4dp"
            android:paddingStart="4dp"
            android:background="@drawable/round_field"
            android:inputType="text" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:fontFamily="@font/geobold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:background="@drawable/button_grad"
            android:text="Tambah Kelas" />

    </LinearLayout>

</FrameLayout>